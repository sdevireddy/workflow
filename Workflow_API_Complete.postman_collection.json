          "name": "Execute Workflow",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Tenant-ID",
                "value": "{{tenantId}}"
              }
            ],
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}/execute",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"lead\": {\n    \"id\": 456,\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john@example.com\",\n    \"score\": 75,\n    \"source\": \"Website\"\n  }\n}"
            }
          }
        },
