  "item": [
    {
      "name": "1. Workflow Management",
      "item": [
        {
          "name": "Create Workflow",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/api/workflows",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"workflowName\": \"Lead Nurturing Campaign\",\n  \"workflowKey\": \"lead_nurture_v1\",\n  \"description\": \"Automated lead nurturing workflow\",\n  \"moduleType\": \"LEAD\",\n  \"triggerType\": \"RECORD_CREATE\",\n  \"isActive\": true,\n  \"workflowConfig\": {\n    \"nodes\": [\n      {\n        \"id\": \"node_1\",\n        \"type\": \"trigger\",\n        \"subtype\": \"record_created\",\n        \"label\": \"Lead Created\",\n        \"config\": {},\n        \"connections\": { \"next\": \"node_2\" }\n      },\n      {\n        \"id\": \"node_2\",\n        \"type\": \"communication\",\n        \"subtype\": \"send_email\",\n        \"label\": \"Send Welcome Email\",\n        \"config\": {\n          \"to\": \"{{lead.email}}\",\n          \"subject\": \"Welcome!\",\n          \"body\": \"Hello {{lead.firstName}}\"\n        },\n        \"connections\": { \"next\": null }\n      }\n    ]\n  }\n}"
            }
          }
        },
        {
          "name": "Get All Workflows",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/workflows"
          }
        },
        {
          "name": "Get Workflow by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}"
          }
        },
        {
          "name": "Update Workflow",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"workflowName\": \"Updated Workflow Name\",\n  \"description\": \"Updated description\"\n}"
            }
          }
        },
        {
          "name": "Delete Workflow",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}"
          }
        },
        {
          "name": "Activate Workflow",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}/activate"
          }
        },
        {
          "name": "Deactivate Workflow",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}/deactivate"
          }
        },
